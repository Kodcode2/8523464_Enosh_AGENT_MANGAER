@model IEnumerable<AgentMVC.ViewModels.MissionVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Missions</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XAgent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YAgent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XTarget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YTarget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XAgent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YAgent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XTarget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YTarget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingTime)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @if (item.Status == "Propose")
                    {
                        @Html.ActionLink("Assign", "Assign", new { id=item.Id })
                    }
            </td>
        </tr>
}
    </tbody>
</table>
